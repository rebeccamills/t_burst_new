<div class="main-container">

<div class='left-container'>
	<div class="nav">
	<img><%=image_tag "Twitter_logo_blue.png" %></img>
		<ul>
		<% if current_user %>
			<li><img id="profile-pic" src="<%= current_user.pic%>"/></li>
			<li id='you'><%= current_user.name %></li>
			<li id="leaderboard_link">Leaderboard</li>
			<li id="your_stats">Your Stats</li>
			<li id="sign-out"><%= link_to "Sign Out", signout_path %></li>
		<%else%>
		<li><%= link_to "Sign in with Twitter", "/auth/twitter" %></li>
		<% end %>
		</ul>
	</div>
</div>



<div class='right-container'>

		<div class="banner">
			<h1>TwitterBURST!</h1>
		</div>

	<!-- 	<div class="notice-banner">
			<%# if flash[:notice] %>
				<p class="notice"><%#= flash[:notice] %></p>
			<%# end %>
		</div>  -->

		<div id="leaderboard" style="display: none">
			<ul id="leaders">LEADERBOARD
				<li id="leader-one"></li>
				<li id="leader-two"></li>
				<li id="leader-three"></li>
				<li id="leader-four"></li>
				<li id="leader-five"></li>
				<li id="leader-six"></li>
				<li id="leader-seven"></li>
				<li id="leader-eight"></li>
				<li id="leader-nine"></li>
				<li id="leader-ten"></li>
			</ul>
		</div>
		<div id="stats" style="display: none">
			<ul id="my_stats">YOUR STATS
				<li id="stats-name"></li>
				<li id="stats-wins"></li>
				<li id="stats-losses"></li>
				<li id="stats-ties"></li>
			</ul>
		</div>

		<div class='hashtags'>
			<input type='text' id='first-hashtag-input' placeholder='Your hashtag!'></input>
			<h3 id="hash2"></h3>
		</div>

		<div class="circle-set">	
			<div class="circle" id="circle-one"></div>
			<div class="circle" id="circle-two"></div>
		</div>

			<div class='tweet-bodies'>
				<div class='tweet-one'>
					<h3 id='first-hashtag-result'></h3>
				</div>
				<div class='tweet-two'>
					<h3 id='second-hashtag-result'></h3>
				</div>
				<div class='space'>
				</div>
			</div>

			<div class="button-set">
				<h3 id='first-hashtag'></h3>
				<h3 id='first-hashtag-result'></h3>
				<button id="ticker-one">0</button>
				<button id="start-button">Start!</button>
				<button id="reset-button">Reset!</button>
				<button id="ticker-two">0</button>
			</div>
			<div class='footer'>Visit the code on <a href='https://github.com/emilymcafee/t_burst_new'>GitHub.</div>
	</div>
</div>


